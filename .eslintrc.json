{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended",
		"prettier",
		"prettier/react"
	],
	"rules": {
		"react/prop-types": 0,
		"no-console": 1,
		"no-import-assign": 2,
		"no-return-await": 2,
		"no-template-curly-in-string": 1,
		"no-unused-vars": ["error", { "ignoreRestSiblings": true }],
		"array-callback-return": 1,
		"block-scoped-var": 2,
		"complexity": ["error", 10],
		"dot-notation": 1,
		"no-else-return": 2,
		"no-return-assign": 2,
		"no-path-concat": 2,
		"prefer-const": 2,
		"react/react-in-jsx-scope": 0,
		"jsx-a11y/anchor-is-valid": 0
	},
	"plugins": ["react", "import", "jsx-a11y"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"globals": {
		"React": "writable"
	}
}
